@model IEnumerable<SeeManga.Models.DTOManga>

<link href="~/img/NoContent.png" />
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Mangás</h1>
    <div class="empty-space"></div>

    <div class="empty-space"></div>

    <div class="row">
        <div class="col-sm">
            <a asp-action="AdicionarManga" asp-controller="Mangas" class="btn btn-primary" type="button">Adicionar Novo mangá</a>
            <div class="empty-space"></div>
        </div>
        <div class="col-sm">
            <a asp-action="Index" asp-controller="Generos" class="btn btn-primary" type="button">Adicionar Novo Genero</a>
            <div class="empty-space"></div>
        </div>
        <div class="col-sm">
            <a asp-action="Index" asp-controller="Situacoes" class="btn btn-primary" type="button">Adicionar Nova Situação</a>
            <div class="empty-space"></div>
        </div>
    </div>

    <div class="empty-space"></div>
    <div class="empty-space"></div>
    <div class="empty-space"></div>
    <h1>Todos Mangás</h1>
    <hr />
    @if (Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_MANGA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TITULO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SINOPSE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CAPA)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_SITUACAO)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID_MANGA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TITULO)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SINOPSE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CAPA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID_SITUACAO)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <text>
            <div class="background-NoContentdb">
                <p>Nenhum mangá cadastrado no banco de dados!</p>
                <img src="~/img/NoContent.png" />
            </div>
        </text>
    }
</div>

